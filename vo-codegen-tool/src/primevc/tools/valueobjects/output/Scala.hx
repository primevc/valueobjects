			// asDBObject()
			a("\n  def asDBObject(vo: "); a(def.name); a('VO): DBObjectVO['); a(def.name); a('VO] = new DBObjectVO(vo) {\n');
			a('    override def containsField(name: String) = outer.isSet(vo, name);\n');
